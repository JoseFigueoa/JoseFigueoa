@model Gestor2._0.Data.DB_BASE.Bautizos

<div class="container">

    <div class="pagetitle">
        <h1>Bautizos</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Procesos</a></li>
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Bautizos">Bautizos</a></li>
                <li class="breadcrumb-item active">Nuevo</li>
            </ol>
        </nav>
    </div>



    <div class="card">
        <div class="card-body">

            <h5 class="card-title">Formulario</h5>

            <form asp-action="Create" class="row g-3 needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdNombre" class="control-label"></label>
                    <div class="input-group">
                        <select asp-for="IdNombre" class="form-control" asp-items="ViewBag.IdNombre" required></select>
                        <span><!-- Button trigger modal --><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Buscar</button></span>
                    </div>

                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre.
                    </div>


                </div>
                <div class="form-group">
                    <label asp-for="FechaEvento" class="control-label"></label>
                    <input type="date" asp-for="FechaEvento" class="form-control" required />
                    <span asp-validation-for="FechaEvento" class="text-danger"></span>

                    <div class="invalid-feedback">
                        Por favor, ingrese fecha del evento.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdPadre" class="control-label"></label>
                    <select asp-for="IdPadre" class="form-control" asp-items="ViewBag.IdPadre" required></select>

                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre del padre.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdMadre" class="control-label"></label>
                    <select asp-for="IdMadre" class="form-control" asp-items="ViewBag.IdMadre" required></select>

                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre de la madre.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdPadrino" class="control-label"></label>
                    <select asp-for="IdPadrino" class="form-control" asp-items="ViewBag.IdPadrino"></select>

                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre del padrino.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="IdMadrina" class="control-label"></label>
                    <select asp-for="IdMadrina" class="form-control" asp-items="ViewBag.IdMadrina"></select>


                    <div class="invalid-feedback">
                        Por favor, ingrese el nombre de la madrina.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Libro" class="control-label"></label>
                    <input asp-for="Libro" class="form-control" required />
                    <span asp-validation-for="Libro" class="text-danger"></span>

                    <div class="invalid-feedback">
                        Por favor, ingrese el No. de libro.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Folio" class="control-label"></label>
                    <input asp-for="Folio" class="form-control" required />
                    <span asp-validation-for="Folio" class="text-danger"></span>

                    <div class="invalid-feedback">
                        Por favor, ingrese el No. de folio.
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Nota" class="control-label"></label>
                    <input asp-for="Nota" class="form-control" />
                    <span asp-validation-for="Nota" class="text-danger"></span>
                    <br />
                </div>
              

                <div class="row">
                    <button type="submit" class="btn btn-primary w-100 mt-5">Registrar</button>
                </div>
            </form>
        </div>
    </div>


</div>

<div>
    <a asp-action="Index" class="btn btn-light">Regresar</a>
</div>

<div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Buscador</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="container">
                        <div class="form-group">
                            <label asp-for="IdNombre" class="control-label"></label>
                            <div class="input-group">
                                <select asp-for="IdNombre" class="form-control" asp-items="ViewBag.IdNombre"></select>&nbsp;
                                <span><!-- Button trigger modal --><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">Buscar</button></span>
                            </div>


                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="~/assets/js/bautizos/bautizosNuevo.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
