
@{ List<Departamento> listado = Model; }

<div class="container">

    <div class="pagetitle">
        <h1>Departamento</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Inicio</a></li>
                <li class="breadcrumb-item active">Departamento</li>
            </ol>
        </nav>
    </div>

    <div class="card">
        <div class="card-body p-3">
            <a type="button" asp-controller="Departamento" asp-action="Nuevo" class="btn btn-primary">
                <i class="bx bxs-user-plus"></i>
                <span class="me-1">Agregar</span>
            </a>
            <a onclick="reporte();" class="btn btn-secondary">
                <i class="bx bxs-report"></i>
                <span class="me-1">Reporte</span>
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Listado</h5>
            <div class="table-responsive">
                <table id="tb-departamento" class="table">
                    <thead>
                        <tr>
                            <th scope="col">
                                Pais
                            </th>
                            <th scope="col">
                                Deparamento
                            </th>
                            <th scope="col">Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<script src="~/assets/js/departamento/departamento.js"></script>