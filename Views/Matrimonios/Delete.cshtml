@model Gestor2._0.Data.DB_BASE.Matrimonios

<div class="container">

    <div class="pagetitle">
        <h1>Matrimonios</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Procesos</a></li>
