                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NoRegistro)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NoRegistro)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IdEsposaNavigation)
