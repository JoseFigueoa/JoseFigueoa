                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IdEsposoNavigation.PrimerApellido)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> 

                </form>
            </div>


        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-light">Regresar</a>
    </div>
</div>

