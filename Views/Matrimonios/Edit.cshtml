@model Gestor2._0.Data.DB_BASE.Matrimonios


    <div class="container">

        <div class="pagetitle">
            <h1>Bautizos</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home">Procesos</a></li>
                    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Matrimoios">Matrimonios</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </nav>
        </div>

        <div class="card">

            <div class="card-body">
                <h5 class="card-title">Formulario</h5>
                <div class="row">
                  
                        <form asp-action="Edit" class="row g-3 needs-validation">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="IdEsposo" class="control-label"></label>
                                <select asp-for="IdEsposo" class="form-control" asp-items="ViewBag.IdEsposo"></select>
                                <span asp-validation-for="IdEsposo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdEsposa" class="control-label"></label>
                                <select asp-for="IdEsposa" class="form-control" asp-items="ViewBag.IdEsposa"></select>
                                <span asp-validation-for="IdEsposa" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaEvento" class="control-label"></label>
                                <input asp-for="FechaEvento" class="form-control" />
                                <span asp-validation-for="FechaEvento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Libro" class="control-label"></label>
                                <input asp-for="Libro" class="form-control" />
                                <span asp-validation-for="Libro" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Folio" class="control-label"></label>
                                <input asp-for="Folio" class="form-control" />
                                <span asp-validation-for="Folio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Nota" class="control-label"></label>
                                <input asp-for="Nota" class="form-control" />
                                <span asp-validation-for="Nota" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaRegistro" class="control-label"></label>
                                <input asp-for="FechaRegistro" class="form-control" />
                                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
                                <br />
                            </div>
                            <div class="row">
                                <input type="submit" value="Registrar" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>


            </div>
        </div>




    <div>
        <a asp-action="Index" class="btn btn-light">Regresar</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
